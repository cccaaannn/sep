<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <springProperty scope="context" name="logstashEnabled" source="logstash.enabled"/>
    <springProperty scope="context" name="logstashHost" source="logstash.host"/>
    <springProperty scope="context" name="logstashPort" source="logstash.port"/>
    <springProperty scope="context" name="springAppName" source="spring.application.name"/>

    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>

    <!-- Default appender -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

    <!-- Rolling file appender -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/sep.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/sep.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Logstash appender, enabled conditionally on logstash.enabled property -->
    <if condition='${logstashEnabled} == true'>
        <then>
            <appender name="LOGSTASH" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
                <destination>${logstashHost}:${logstashPort}</destination>
                <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
                    <providers>
                        <arguments>
                            <includeNonStructuredArguments>true</includeNonStructuredArguments>
                        </arguments>
                        <pattern>
                            <pattern>
                                {
                                "serviceName": "${springAppName}",
                                "hostName": "${hostname}",
                                "pid": "${PID:-}"
                                }
                            </pattern>
                        </pattern>

                        <timestamp>
                            <fieldName>Timestamp/UTC</fieldName>
                            <timeZone>UTC</timeZone>
                        </timestamp>
                        <logLevel>
                            <fieldName>severity</fieldName>
                        </logLevel>
                        <threadName>
                            <fieldName>thread</fieldName>
                        </threadName>
                        <loggerName>
                            <fieldName>logger</fieldName>
                        </loggerName>
                        <message>
                            <fieldName>message</fieldName>
                        </message>
                        <throwableClassName>
                            <fieldName>exceptionClass</fieldName>
                        </throwableClassName>
                        <stackTrace>
                            <fieldName>trace</fieldName>
                            <!-- maxLength - limit the length of the stack trace -->
                            <throwableConverter
                                    class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
                                <maxDepthPerThrowable>200</maxDepthPerThrowable>
                                <maxLength>5000</maxLength>
                                <rootCauseFirst>true</rootCauseFirst>
                            </throwableConverter>
                        </stackTrace>

                        <mdc/>
                    </providers>
                </encoder>
            </appender>

            <root level="INFO">
                <appender-ref ref="CONSOLE"/>
                <appender-ref ref="FILE"/>
                <appender-ref ref="LOGSTASH"/>
            </root>
        </then>
    </if>

</configuration>